#!/sbin/runscript
# (C) Martin V\"ath <martin@mvath.de>

depend() {
	need localmount
}

description='mount/umount all squashmount configured mountpoints'

start() {
	ebegin 'mounting all squashmount configured mountpoints'
	squashmount mount
	eend ${?}
	# Succeed also if some mountpoint fail to force umount:
	:
}

stop() {
	ebegin 'umounting all squashmount configured mountpoints'
	squashmount umount
	eend ${?}
}
