#!/sbin/runscript
# (C) Martin V\"ath <martin@mvath.de>

depend() {
	need localmount
}

description='start/stop all squashmount configured mountpoints'

start() {
	ebegin 'mounting with squashmount'
	squashmount start
	eend ${?}
	# Succeed also if some mountpoint fail to force umount:
	:
}

stop() {
	ebegin 'umounting/stopping squashmount'
	squashmount stop
	eend ${?}
}
